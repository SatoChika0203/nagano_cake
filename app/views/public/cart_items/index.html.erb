<h1>cart_items</h1>

<div>
<table>
 <thead>
   <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th><%= nil %></th>
      <th><%= nil %></th>
      <th><%= nil %></th>
      <th>小計</th>
      <th><%= nil %></th>
   </tr>
 </thead>
 <%= link_to 'カートを空にする', destroy_all_cart_items_path, method: :delete, class: "btn btn-danger btn-sm" %>
 <tbody>
 <% @cart_items.each do |cart_item| %>
   <tr>
      <td><%= image_tag cart_item.item.image, size: "100x100" %><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price %></td>  <!--税込み単価（消費税の10%を加算）-->
      <td><%= cart_item.amount %></td>
      <td><%= form_with model: @cart_item, url:cart_item_path(cart_item.id), method: :patch do |f| %></td>
      <td><%= f.select :amount, *[1..10] %></td>
      <%= f.hidden_field :item_id, :value => cart_item.item_id %>
      <%= f.hidden_field :customer_id, :value => current_customer.id %>
      <td><button class="btn btn-success btn-sm" type="submit">変更</button></td>
      <td><% end %></td>

      <td><%= cart_item.subtotal %></td>　　<!--小計（１つの商品✖個数）-->
      
      
      
      <td><%= link_to '削除する', cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger btn-sm" %></td>
   </tr>
 <% end %>
 </tbody>
 </table>
 <%= link_to '買い物を続ける', items_path, method: :get, class: "btn btn-primary btn-sm" %>
 
 <% if @cart_items.present? %>
 <%= link_to '情報入力に進む', new_order_path, method: :get, class: "btn btn-success" %>
 <% end %>

</div>

<!--form_withのモデルクラスのインスタンス：保存したいテーブルのクラスのインスタンス-->



