<div class="container-md p-5">
<h2>注文履歴一覧</h2>

<div class="m-5">
  <table class="table table-bordered">
    <thead class="text-center table-secondary">
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>注文詳細</th>
      </tr>
    </thead>

    <tbody>
     <% @orders.each do |f| %>
      <tr>
        <td class="col-2"><%= f.created_at %></td>
        <td class="col-3">〒<%= f.postal_code %><br><%= f.address %><br><%= f.address_name %></td>
        <td class="col-3"><% f.items.each do |t| %><p><%= t.name %></p><%end%></td>
        <td class="col-2"><%= (f.amount_money.to_i)+(f.postage.to_i) %>円</td>
        <td class="col-2 text-center"><%= link_to '表示する', order_path(f.id), method: :get, class: "btn btn-primary btn-sm" %></td>
      </tr>
     <%end%>
    </tbody>
  </table>
</div>
</div>