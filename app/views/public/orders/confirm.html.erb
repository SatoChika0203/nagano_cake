<h1>Orders#confirm</h1>

<h1>注文確認画面</h1>

<table>
    <thead>
        <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
        </tr>
    </thead>
    <tbody>
     <% @cart_items.each do |cart_item| %>
        <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal %></td>
                <% @total_amount += cart_item.subtotal %>
        </tr>
     <%end%>
    </tbody>
</table>

<table>
    <thead>
        <tr>
            <th>送料</th>
            <th>商品合計</th>
            <th>請求金額</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><%= @order.postage %></td>
            <td><%= @total_amount %></td>
            <td><%= @order.postage+@total_amount %></td>
        </tr>
    </tbody>
</table>


<h2>支払方法</h2>
<%= @payment_method %>
<h2>お届け先</h2>
<span>〒<%= current_customer.postal_code %></span><span><%= current_customer.address %></span>

<%= button_to '注文を確定する', {controller: 'orders', action: 'create'}, {method: :post }%>

<%= form_with model: @order, url: orders_path, method: :post do |f| %>
<%= hidden_field :totaL_price, :value => @total_amount %>
<%end%>