<div class="container-md p-5">
<h2>注文履歴詳細</h2>

<div class="d-flex flex-row m-4">
  <div class="col-8">
     <table class="table table-bordered">
       <h5>注文情報</h5>
          <tr>
            <th class="table-secondary col-5">注文日</th>
            <td class="col-7"><%= @order.created_at %></td>
          </tr>
          <tr>
            <th class="table-secondary col-5">配送先</th>
            <td class="col-7">〒<%= @order.postal_code %><%= @order.address %><%= @order.address_name %></td>
          </tr>
          <tr>
            <th class="table-secondary col-5">支払方法</th>
            <td class="col-7"><%= @order.payment_method_i18n %></td>
          </tr>
      </table> 
  </div>
  
  <div class="col-4 ml-4">
      <table class="table table-bordered">
        <h5>請求情報</h5>
          <tr>
            <th class="table-secondary col-5">商品合計</th>
            <td class="col-7"><%= @order.amount_money %></td>
          </tr>
          <tr>
            <th class="table-secondary col-5">配送料</th>
            <td class="col-7"><%= @order.postage %></td>
          </tr>
          <tr>
            <th class="table-secondary col-5">ご請求額</th>
            <td class="col-7"><%= @order.amount_money + @order.postage %></td>
          </tr>
      </table>
  </div>
</div>

<div class="m-4 pl-3">
  <h5>注文内容</h5>
   <table class="table table-bordered">
      <thead class="table-secondary col-5">
        <tr>
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>

      <tbody>
        <% @order.order_details.each do |f| %>
          <tr>
            <td><%= f.item.name %></td>
            <td><%= f.unit_price %></td>
            <td><%= f.amount %></td>
            <td><%= f.subtotal %></td>
          </tr>
        <%end%>
      </tbody>
    </table>
</div>
</div>