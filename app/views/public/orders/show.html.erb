<h1>注文履歴詳細</h1>

<div>
  <h2>注文履歴</h2>
   <table>
      <thead>
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>支払方法</th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td><%= @order.created_at %></td>
          <td><%= @order.postal_code %><%= @order.address %><%= @order.address_name %></td>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
      </tbody>
    </table>
</div>

<div>
  <h2>請求情報</h2>
   <table>
      <thead>
        <tr>
          <th>商品合計</th>
          <th>配送料</th>
          <th>ご請求額</th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td><%= @order.amount_money %></td>
          <td><%= @order.postage %></td>
          <td><%= @order.amount_money + @order.postage %></td>
        </tr>
      </tbody>
    </table>
</div>

<div>
  <h2>注文内容</h2>
   <table>
      <thead>
        <tr>
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <% @order_details.each do |f| %>
          <td><%= f.item.name %></td>
          <td><%= f.unit_price %></td>
          <td><%= f.amount %></td>
          <td><%= f.subtotal %></td>
          <%end%>
        </tr>
      </tbody>
    </table>
</div>