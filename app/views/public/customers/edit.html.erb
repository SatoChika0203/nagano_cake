  <h2>会員情報編集</h2>
    <div class="m-5">
      <%= form_with model: @customer, url:customers_path, method: :patch do |f| %>
        <div class="form-group row">
          <div class="col-md-2">
            <p>氏名</p>
          </div>
          <div class="d-flex flex-row col-md-10">
            <p><%= f.text_field :last_name %></p>
            <p><%= f.text_field :first_name %></p>
          </div>
        </div>
        
        <div class="form-group row">
          <div class="col-md-2">
            <p>フリガナ</p>
          </div>
          <div class="d-flex flex-row col-md-10">
            <p><%= f.text_field :last_name_kana %></p>
            <p><%= f.text_field :first_name_kana %></p>
          </div>
        </div>
        
        <div class="form-group row">
          <div class="col-md-2">
            <p>郵便番号</p>
          </div>
          <div class="col-md-10">
            <p><%= f.text_field :postal_code %></p>
          </div>
        </div>
        
        <div class="form-group row">
          <div class="col-md-2">
            <p>住所</p>
          </div>
          <div class="col-md-10">
            <p><%= f.text_area :address %></p>
          </div>
        </div>    
        
        <div class="form-group row">
          <div class="col-md-2">
            <p>電話番号</p>
          </div>
          <div class="col-md-10">
            <p><%= f.text_field :telephone_number %></p>
          </div>
        </div>
        
        <div class="form-group row">
          <div class="col-md-2">
            <p>メールアドレス</p>
          </div>
          <div class="col-md-10">
            <p><%= f.text_field :email %></p>
          </div>
        </div>
        
      <div class="d-flex flex-row m-5">
          <p class="mr-5"><button class="btn btn-success btn-sm" type="submit">編集内容を保存する</button></p>
    <%end%>
  
          <p class="ml-5"><%= link_to "退会する", confirm_customers_path, method: :get, class: "btn btn-danger btn-sm" %></p>
      </div>    
    </div>
</div>