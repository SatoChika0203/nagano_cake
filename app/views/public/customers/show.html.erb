<div class="container-md p-5">
  <h2>マイページ</h2>
  <div class="d-flex flex-row">
    <h5 class="mr-5 mt-5"><strong>登録情報</strong></h5>
    <p class="mt-5"><%= link_to "編集する", customers_information_edit_path, method: :get, class: "btn btn-success btn-sm" %></p>
  </div>
  
  <div class="mt-3">
      <table class="table table-bordered">
         <tr>
            <th class="table-secondary col-4">氏名</th>
            <td class="col-8"><span><%= @customer.last_name %></span><span><%= @customer.first_name %></span></td>
         </tr>
         <tr>
            <th class="table-secondary col-4">カナ</th>
            <td class="col-8"><span><%= @customer.last_name_kana %></span><span><%= @customer.first_name_kana %></span></td>  <!--税込み単価（消費税の10%を加算）-->
         </tr>
         <tr>
            <th class="table-secondary col-4">郵便番号</th>
            <td class="col-8"><%= @customer.postal_code %></td>
         </tr>
         <tr>
            <th class="table-secondary col-4">住所</th>
            <td class="col-8"><%= @customer.address %></td>
         </tr>
         <tr>
            <th class="table-secondary col-4">電話番号</th>
            <td class="col-8"><%= @customer.telephone_number %></td>
         </tr>
         <tr>
            <th class="table-secondary col=4">メールアドレス</th>
            <td class="col=8"><%= @customer.email %></td>
         </tr>
      </table>
  </div>

  <div class="d-flex flex-row mt-5">
    <h5 class="mr-5"><strong>注文履歴</strong></h5>
    <p><%= link_to "一覧を見る", orders_path, method: :get, class: "btn btn-primary btn-sm" %></p>
  </div>
</div>
