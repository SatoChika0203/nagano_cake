<h1>admin/items#edit</h1>

<h1><%= @item.name %>の編集画面</h1>

<%= form_with model: @item, url:admin_item_path(@item.id), method: :patch do |f| %>
 <p>image</p>
 <%= f.file_field :image %>
 <p>name</p>
 <%= f.text_field :name %>
 <p>introduction</p>
 <%= f.text_area :introduction %>
 <p>price</p>
 <%= f.text_field :price %>
 <p>is_sales</p>
 <%= f.text_field :is_sales %>
 
   <%= f.submit 'Update Item' %>
<% end %>