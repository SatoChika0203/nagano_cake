<h1>admin/items#edit</h1>

<h1><%= @item.name %>の編集画面</h1>

<%= form_with model: @item, url:admin_item_path(@item.id), method: :patch do |f| %>
 <%= f.label :image, "商品画像" %>
 <%= f.file_field :image, placeholder: "商品画像", accept: "image/*" %>
 <%= f.label :name, "商品名" %>
 <%= f.text_field :name %>
 <%= f.label :introduction, "商品説明" %>
 <%= f.text_area :introduction %>
 <%= f.label :price, "税抜き価格" %>
 <%= f.text_field :price %>円
 <%= f.label :is_sales, "販売ステータス" %>
 <%= f.text_field :is_sales %>
 
   <%= f.submit '変更を保存する' %>
<% end %>