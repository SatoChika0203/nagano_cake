<div class="container-md p-5">
  <h2><%= @item.name %>の編集画面</h2>

    <% if @item.errors.any? %>
      <%= @item.errors.count %>件のエラーが発生しました
      <ul>
        <% @item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

  <div class="m-5">
     <%= form_with model: @item, url:admin_item_path(@item.id), method: :patch do |f| %>
        <div class="form-group row">
          <div class="col-md-2">
            <p>商品画像</p>
          </div>
          <div class="col-md-10">
            <p><%= f.file_field :image, placeholder: "商品画像", accept: "image/*" %></p>
          </div>
        </div>
        
        <div class="form-group row">
          <div class="col-md-2">
            <p>商品名</p>
          </div>
          <div class="col-md-10">
            <p><%= f.text_field :name %></p>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-2">
            <p>商品説明</p>
          </div>
          <div class="col-md-10">
            <p><%= f.text_area :introduction %></p>
          </div>
        </div>
        
        <div class="form-group row">
          <div class="col-md-2">
            <p>税抜き価格</p>
          </div>
          <div class="col-md-10">
            <p><%= f.text_field :price %>　円</p>
          </div>
        </div>        

        <div class="form-group row">
          <div class="col-md-2">
            <p>販売ステータス</p>
          </div>
          <div class="col-md-10">
            <%= f.radio_button :is_sales, Item.is_sales.key(true) %>
            <%= f.label :is_sales_sale, Item.is_sales_i18n[:sale] %>
            <%= f.radio_button :is_sales, Item.is_sales.key(false) %>
            <%= f.label :is_sales_notsale, Item.is_sales_i18n[:notsale] %>
          </div>
        </div>  
        
        <div>
          <button class="btn btn-success" type="submit">変更を保存する</button>
        </div>
      <% end %>
    </div>
        