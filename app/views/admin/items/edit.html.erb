<h1>admin/items#edit</h1>

<h1><%= @item.name %>の編集画面</h1>

<% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました
  <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @item, url:admin_item_path(@item.id), method: :patch do |f| %>
<div>
 <%= f.label :image, "商品画像" %>
 <%= f.file_field :image, placeholder: "商品画像", accept: "image/*" %>
</div>
<div>
 <%= f.label :name, "商品名" %>
 <%= f.text_field :name %>
</div>
<div>
 <%= f.label :introduction, "商品説明" %>
 <%= f.text_area :introduction %>
</div>
<div>
 <%= f.label :price, "税抜き価格" %>
 <%= f.text_field :price %>円
</div>
<div>
 <%= f.label :is_sales, "販売ステータス" %>
 <%= f.radio_button :is_sales, Item.is_sales.key(true) %>
 <%= f.label :is_sales_sale, Item.is_sales_i18n[:sale] %>
 <%= f.radio_button :is_sales, Item.is_sales.key(false) %>
 <%= f.label :is_sales_notsale, Item.is_sales_i18n[:notsale] %>
</div>
<div>
 <button class="btn btn-success" type="submit">変更を保存する</button>
</div>
<% end %>