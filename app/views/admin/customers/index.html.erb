<div class="container-md p-5">
  <div class="d-flex bd-highlight mb-3">
    <h2 class="mr-auto bd-highlight">会員一覧</h2>
  </div>
  
  <div>
    <table class="table table-hover">
     <thead class="table-secondary">
       <tr class="text-center">
          <th>会員ID</th>
          <th>会員名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
       </tr>
     </thead>
     
     <tbody>
       <% @customers.each do |customer| %>
         <tr class="text-center">
          　<td class="col-2"><%= customer.id %></td>
          　<td class="col-6"><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer.id), method: :get %></td>
          　<td class="col-2"><%= customer.email %></td>
          <% if customer.is_deleted == true %>
            <td class="text-secondary">退会中</td>
          <% else %>
            <td class="text-success">有効</td>
          <% end %>
         </tr>
       <% end %>
      </tbody>
    </table>
  </div>
</div>


