<h1>admin/customer#edit</h1>

<h1>会員の編集画面</h1>


<p>会員ID</p>
 <%= @customer.id %>
<%= form_with model: @customer, url:admin_customer_path(@customer.id), method: :patch do |f| %>
<p>氏名</p>
 <%= f.text_field :last_name %><%= f.text_field :first_name %>
<p>フリガナ</p>
 <%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %>
 <p>郵便番号</p>
 <%= f.text_field :postal_code %>
 <p>住所</p>
 <%= f.text_area :address %>
 <p>電話番号</p>
 <%= f.text_field :telephone_number %>
 <p>メールアドレス</p>
 <%= f.text_field :email %>
<p>会員ステータス</p>
 <%= f.radio_button :is_deleted, false %>
 <%= f.label :is_deleted, '有効' %>  
 <%= f.radio_button :is_deleted, true %>
 <%= f.label :is_deleted, '退会' %>  
 
 <button class="btn btn-success" type="submit">変更を保存</button>
<% end %>