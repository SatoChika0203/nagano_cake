<h2>注文履歴詳細</h2>

<div>
   <table>
      <thead>
        <tr>
          <th>購入者</th>
          <th>注文日</th>
          <th>配送先</th>
          <th>支払方法</th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td><%= @order.customer.last_name %><%= @order.customer.first_name %></td>
          <td><%= @order.created_at %></td>
          <td><%= @order.postal_code %><%= @order.address %><br><%= @order.address_name %></td>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
      </tbody>
    </table>
</div>

<div>
   <table>
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>

      <tbody>
        <% @order_detail.each do |f| %>
        <tr>
          <td><%= f.item.name %></td>
          <td><%= f.item.with_tax_price %></td>
          <td><%= f.amount %></td>
          <td><%= f.subtotal %></td>
        </tr>
        <%end%>
      </tbody>
    </table>
</div>

<div>
   <table>
      <thead>
        <tr>
          <th>商品合計</th>
          <th>送料</th>
          <th>請求金額合計</th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td><%= @order.amount_money %></td>
          <td><%= @order.postage %></td>
          <td><%= @order.amount_money+@order.postage %></td>
        </tr>
      </tbody>
    </table>
</div>